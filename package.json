{
  "name": "windows-98-ui-kit",
  "version": "1.0.0",
  "description": "A comprehensive HTML/CSS UI kit that replicates the authentic Windows 98 aesthetic",
  "main": "dist/windows-98-ui-kit.css",
  "scripts": {
    "build": "npm run build:css",
    "build:css": "cat src/styles/*.css > dist/windows-98-ui-kit.css",
    "dev": "python3 -m http.server 8000",
    "watch": "watch 'npm run build' src/",
    "lint": "stylelint 'src/**/*.css'",
    "clean": "rm -rf dist/* && mkdir -p dist"
  },
  "keywords": [
    "windows-98",
    "ui-kit",
    "css",
    "retro",
    "vintage",
    "component-library"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "puppeteer": "^24.9.0",
    "stylelint": "^15.0.0",
    "stylelint-config-standard": "^34.0.0",
    "watch": "^1.0.2"
  },
  "files": [
    "dist/",
    "src/",
    "examples/",
    "docs/"
  ],
  "repository": {
    "type": "git",
    "url": ""
  },
  "bugs": {
    "url": ""
  },
  "homepage": ""
}
